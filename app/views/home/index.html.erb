<%- title t('home.title', site_name: site_name) %>
<%- description "#{site_name} is a free site providing user scripts to improve your web browsing experience." %>

<p class="front-page-p"><%=t('home.welcome', site_name: site_name)%></p>

<section class="front-page-box">
	<h3><%=t('home.explain_user_scripts_heading')%></h3>

	<p><%=t('home.explain_user_scripts_html', how_to_install_link: link_to(t('home.explain_user_scripts_how_to_install_link'), help_installing_user_scripts_path).html_safe, browse_link: link_to(t('home.explain_user_scripts_browse_link'), scripts_path).html_safe, site_name: site_name)%></p>
</section>


<section class="front-page-box">
	<h3><%=t('home.greasy_fork_for_authors_heading', site_name: site_name)%></h3>

	<p><%=t('home.greasy_fork_for_authors_html', site_name: site_name)%></p>
</section>

<section>
	<h3><%=t('home.scripts_sample')%></h3>
	<ul>
		<% @highlighted_scripts.each do |script| %>
			<li><%=link_to script.name(I18n.locale), script%> - <%=script.description(I18n.locale)%></li>
		<% end %>
		<li><%=link_to t('home.scripts_sample_more'), scripts_path%></li>
	</ul>
</section>
