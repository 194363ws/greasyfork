<h1>Scripts under assessment</h1>
<p><%=link_to 'Read Greasy Fork\'s policy on <code>@require</code>.'.html_safe, help_code_rules_path(:anchor => 'require'), {:target => 'code_rules'}%></p>
<% if @scripts.empty? %>
	<p>No scripts currently under assessment.</p>
<% else %>
	<ul>
		<% @scripts.each do |script| %>
			<li>
				<%=link_to script.name, script %> <%=script.assessments.map{|a| a.assessment_reason.name + ' ' + a.details}.join(', ')%>
			</li>
		<% end %>
	</ul>
<% end %>
